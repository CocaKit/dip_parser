<%= form_with model: parse_task,  class: "row g-3" do |form| %>
	<% if parse_task.errors.any? %>
		<div style="color: red">
			<h2><%= pluralize(parse_task.errors.count, "error") %> prohibited this parse_task from being saved:</h2>
			<ul>
				<% parse_task.errors.each do |error| %>
					<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<% @litres_categories = LitresCategory.all %>
	<% if not @litres_categories.nil? %>
		<% count = 0%>
		<% @litres_categories.each do |litres_category| %>
			<div class="col-md-4">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" value="<%= "#{litres_category.url},#{litres_category.name}" %>" id="check_<%= count %>" name="category[]">
					<label class="form-check-label" for="check_<%= count %>">
						<%= litres_category.name %>
					</label>
				</div>
				<% count += 1 %>
			</div>
		<% end %>
	<% end %>
	<div class="col-md-12">
		<%= form.submit "Create", class: "btn btn-primary" %>
	</div>
<% end %>
