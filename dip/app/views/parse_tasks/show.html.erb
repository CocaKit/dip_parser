<div id="navbar">
	<%= render partial: "layouts/navbar", locals: { active: 2 }%>
</div>

<% if not notice.nil?%>
	<div class="alert alert-success" role="alert">
		<%= notice %>
	</div>
<% end %>

<% if not alert.nil?%>
	<div class="alert alert-danger" role="alert">
		<%= alert %>
	</div>
<% end %>

<%= render @parse_task %>

<div>

	<% if @parse_task.status == 1 %>
		<%= link_to "Edit this parse task", edit_parse_task_path(@parse_task) %> |
		<%= button_to "Start parsing", parse_parse_task_url, method: :put %>
	<% end %>

	<%= link_to "Back to parse tasks", parse_tasks_path %>

	<% if @parse_task.status != 2 %>
		<%= button_to "Destroy this parse task", @parse_task, method: :delete %>
	<% end %>
</div>
